<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BldgMngr</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lobster+Two&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <p style="margin-left:20px;"><img src="https://homestyleflooringsolutions.com/wp-content/uploads/2017/07/Property-Logo.jpg" width="90px" height="70px" class="logo-top" alt="logo" />RESIDENTS MAY CALL US AT 555-555-5555 
            <span style="font-size:1.8em; color:lightgray;">
               <a class="nav-link text-dark" style=" float:right;" asp-area="" asp-controller="Home" asp-action="Profile"><i class="fas fa-users"></i></a>
               <a class="nav-link text-dark" style=" float:right;" asp-area="" asp-controller="Home" asp-action="Account"><i class="fas fa-comments-dollar"></i></a>
            </span>
        </p>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FLOYD'S</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <hr />
    <footer class="footer text-muted">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-3">
                    <h5>LET'S TALK</h5>
                    <p>
                        555-555-5555 /
                        mail@mail.com
                    </p>
                    <h5>Floyd Management</h5>
                    <p>
                        555 Main St /
                        Any City, State
                    </p>
                </div>
                <div class="col-md-3">
                    <h5>OFFICE HOURS</h5>
                    <p>
                        Monday - Friday <br />
                        9:00am - 5:00pm <br />
                        Saturday <br />
                        10:00am - 4:00pm
                    </p>
                </div>
                <div class="col-md-3">
                    <h5>SITE LINKS</h5>
                    <p>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Account">Account</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Community">COMMUNITY</a> 
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">POLICIES</a>
                    </p>
                </div>
                <div class="col-md-3">
                    <h5>FOLLOW FLOYD MNGMT</h5>
                    <p>
                        <i class="fab fa-facebook"></i>
                        <i class="fab fa-twitter"></i>
                    </p>
                    <p>
                        COPYRIGHT 2020 FLOYD MNGMT
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!--font awesome-->
    <script src="https://kit.fontawesome.com/cce4d0df7e.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
